{
    "name": "ibrostudio/prestashop-module-resources-generator",
    "description": "Developement tool to generate resources for Prestashop modules.",
    "keywords": ["Prestashop", "development", "module", "tools", "generate"],
    "homepage": "https://github.com/iBroStudio/prestashop-module-resources-generator",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "iBroStudio",
            "email": "hello@ibro.studio",
            "role": "Developer"
        }
    ],
    "version": "0.2.3",
    "require": {
        "php": "^8.2.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.0.1",
        "laravel-zero/framework": "^11.0.0",
        "laravel-zero/phar-updater": "^1.4",
        "laravel/pint": "^1.15.2",
        "laravel/prompts": "^0.3.1",
        "mockery/mockery": "^1.6.11",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "symfony/yaml": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -l 5 --memory-limit=1G app tests",
        "test": "vendor/bin/pest",
        "test-f": "vendor/bin/pest --filter",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "build": "@php presta-generator app:build presta-generator"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/presta-generator"]
}
